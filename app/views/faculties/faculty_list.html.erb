<% # <%= link_to "Back", admin_index_path %>
<% @page_title = "Faculty List" %>

<body style="background-color: #F5F7FA">
  <div>
    <div class="popular_catagory_area" style="padding-top: 0%; padding-bottom: 0%; margin: 0">
      <div class="row">
        <div class="col-lg-2 col-xl-12 col-md-6">
          <div class="single_catagory" style="padding-top: 12px; padding-bottom: 12px;">
            <div class="text-center">
              <%= form_with(model: @user, url: faculty_list_faculties_path, local: true) do |f| %>
                <%= f.collection_select :search_branch_faculty, Branch.all, :id, :name, { prompt: "Select Branch", required: true }, { class: "nice-select wide col-md-3", title: "Branch of the students" } %>
              <% end %>
              <h6 class="text-right">
                <%= link_to "Add Faculty", new_faculty_path, class: "boxed-btn3", title: "Add new Faculty" %></h6>
            </div>
          </div>
        </div>
      </div>
    </div>

    <table class="table table-hover" id="faclist">
      <thead class="thead-light">
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Email</th>
          <th>Branch</th>
          <th>Mobile</th>
          <% # <th>Status</th> %>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody id="faculty_list_body">
        <%= render "faculties.html.erb" %>
      </tbody>
    </table>
  </div>
</body>
