<div class="popular_catagory_area" style="padding-top: 5px;">
  <div class="container">
    <div class="row h-100 justify-content-center align-items-top">
      <div class="col-10 col-md-8 col-lg-6">
        <%= form_with(model: @faculty, url: user_session_path, validate: true, local: true) do |f| %>

          <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

          <div class="field">
            <%= f.label :first_name %><span class="myspan">*</span><br />
            <%= f.text_field :fname, autofocus: true, autocomplete: "fname", class: "form_text col-md-12" %>
          </div>

          <div class="field">
            <%= f.label :last_name %><span class="myspan">*</span><br />
            <%= f.text_field :lname, autofocus: true, autocomplete: "lname", class: "form_text col-md-12" %>
          </div>

          <div class="field">
            <%= f.label :email %><span class="myspan">*</span><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form_text col-md-12" %>
          </div>

          <div class="field">
            <%= f.label :mobile %><span class="myspan">*</span><br />
            <%= f.text_field :mobile, autofocus: true, autocomplete: "mobile", class: "form_text col-md-12" %>
          </div>

          <div class="field">
            <%= f.label :branch_id %><span class="myspan">*</span><br />
            <%= f.collection_select :branch_id, Branch.all, :id, :name, { prompt: "Select Branch" }, { class: "nice-select wide col-md-12" } %>
          </div>

          <div class="field">
            <%= f.label :password %><span class="myspan">*</span>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class: "form_text col-md-12" %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation %><span class="myspan">*</span><br />
            <%= f.password_field :password_confirmation, class: "form_text col-md-12" %>
          </div>

          <div class="field">
            <%= f.hidden_field :status, :value => 1 %>
          </div>
          <br />
          <div class="field">
            <div class="col-md-2"></div>
            <%= f.submit formaction: @faculty.new_record? ? faculties_path : edit_faculty_path, class: "boxed-btn3 col-md-12" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
