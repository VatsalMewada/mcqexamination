<center>
  <h2>:::Add Exam:::</h2>
  <table class="roundedCorners" >

    <thead>
      <tr>
        <td>
          <%= form_with(model: @exam,url: createexam_index_path) do |f|%>
            <% if @exam.errors.any? %>
          <h2><%= pluralize(@exam.errors.count, "error") %> prohibited this user from being saved:</h2>

          <ul>
            <% @exam.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
          <% end %>

          <div class="field">
            <%= f.label :name %><br />
            <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
          </div>

          <div class="field">
            <%= f.label :info %><br />
            <%= f.text_area :info, autofocus: true, autocomplete: "info" %>
          </div>

          <div class="field">
            <%= f.label :duration %><br />
            <%= f.number_field :duration, autofocus: true, min: 1, value: 1 %>
          </div>

          <div class="field">
            <%= f.label :passing_marks %><br />
            <%= f.number_field :pmarks, autofocus: true, min: 1, value: 1%>
          </div>
         
          <div class="field">
            <%= f.label :subject %><br />   
            <%= select_tag(:subject_id,  options_from_collection_for_select(Subject.all, :id, :name), {:class=>'form-control', :prompt => 'Select Subject', :onchange => "myFunction(this.value);"}) %>
          </div>

          <div class="field">
            <%= f.hidden_field :etype, :value =>"mcq" %>
          </div>
          
          <div class="actions">
            <%= f.submit "Add Exam", id: "1" %>
          </div>
          <% end %>
        </td>
      </tr>
    </thead>
  </table>
</center>