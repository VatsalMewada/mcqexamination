<div class="popular_catagory_area" style="padding-top: 5px;">
  <div class="container">
    <div class="row h-100 justify-content-center align-items-top">
      <div class="col-10 col-md-8 col-lg-6">
        <%= form_with(model: @user, url: user_session_path, validate: true, local: true) do |f| %>
          <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
          <div class="field">
            <%= f.label :enrollment %><span class="myspan">*</span><br />
            <%= f.text_field :enrollment, autofocus: true, autocomplete: "enrollment", class: "form_text col-md-12", required: true %>
          </div>

          <div class="field">
            <%= f.label :first_name %><br />
            <%= f.text_field :fname, autofocus: true, autocomplete: "fname", class: "form_text col-md-12" %>
          </div>

          <div class="field">
            <%= f.label :last_name %><br />
            <%= f.text_field :lname, autofocus: true, autocomplete: "lname", class: "form_text col-md-12" %>
          </div>

          <div class="field">
            <%= f.label :email %><span class="myspan">*</span><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form_text col-md-12" %>
          </div>

          <div class="field">
            <%= f.label :semester %><span class="myspan">*</span><br />
            <%= f.collection_select :semester_id, Semester.all, :id, :sem, { prompt: "Select Semester" }, { class: "nice-select wide col-md-12" } %>
          </div>

          <div class="field">
            <%= f.label :branch_id %><span class="myspan">*</span><br />
            <%= f.collection_select :branch_id, Branch.all, :id, :name, { prompt: "Select Branch" }, { class: "nice-select wide dropdown-toggle col-md-12" } %>
          </div>

          <div class="field">
            <%= f.label :pass_out_year %><span class="myspan">*</span><br />
            <%= f.text_field :pass_out_year, autofocus: true, autocomplete: "pass_out_year", class: "form_text col-md-12" %>
          </div>

          <div class="field">
            <%= f.label :password %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class: "form_text col-md-12" %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, class: "form_text col-md-12" %>
          </div>

          <div class="field">
            <%= f.hidden_field :status, :value => 2 %>
          </div>
          <br />
          <div class="actions">
            <%= f.submit formaction: (@user.new_record?) ? students_path : edit_student_path, class: "boxed-btn3 btn-lg btn-block" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<br /><br />
<center>
  <h4>or</h4>
  <br /><br />
  <h2>:::Add data from Excell Sheet:::</h2>
  <%= link_to "Download sample", download_excel_students_path %>
  <table class="roundedCorners">
    <thead>
      <tr>
        <%= form_tag import_admin_index_path, multipart: true do %>
        <td class="text-center"><%= file_field_tag :file %></td>
        <td class="text-center"><%= submit_tag "Import", class: "boxed-btn3" %></td>
        <% end %>
      </tr>
    </thead>
  </table>
</center>
